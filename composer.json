{
  "name": "michaelbragg/published",
  "type": "wordpress-theme",
  "license": "proprietary",
  "description": "A WordPress theme for Michael Bragg's website.",
  "homepage": "https://github.com/michaelbragg/published/",
  "support": {
    "issues": "https://github.com/michaelbragg/published/issues/"
  },
  "authors": [
    {
      "name": "Michael Bragg",
      "homepage": "https://www.michaelbragg.net/"
    }
  ],
  "keywords": [
    "wordpress",
    "composer",
    "wp",
    "theme"
  ],
  "minimum-stability": "dev",
  "repositories": [],
  "require": {},
  "require-dev": {
    "thoughtsideas/ti-wpcs" : "dev-master"
  },
  "scripts": {
    "config-ti-wpcs": [
      "\"vendor/bin/phpcs\" --config-set installed_paths ../../../vendor/wp-coding-standards/wpcs,../../../vendor/frenck/php-compatibility,../../../vendor/thoughtsideas/ti-wpcs",
      "\"vendor/bin/phpcs\" --config-set default_standard TI-WPCS",
      "\"vendor/bin/phpcs\" --config-set colors 1",
      "\"vendor/bin/phpcs\" --config-set show_progress 1"
    ],
    "post-install-cmd": "composer config-ti-wpcs",
    "post-update-cmd": "composer config-ti-wpcs",
    "test-phpcbf": "./vendor/bin/phpcbf ./ --standard=vendor/thoughtsideas/ti-wpcs/ti-wpcs",
    "test-phpcs": "./vendor/bin/phpcs ./ --standard=vendor/thoughtsideas/ti-wpcs/ti-wpcs",
    "test-phpmd": "./vendor/bin/phpmd ./ text ./vendor/thoughtsideas/ti-wpcs/TI-WPMD/ruleset.xml",
    "test": [
      "composer run test-phpcbf",
      "composer run test-phpcs",
      "composer run test-phpmd"
    ]
  }
}
